#include <stdio.h>

void contagem_regressiva(int n) {
    if (n >= 0) {
        printf("%d ", n); // Imprime o número atual
        contagem_regressiva(n - 1); // Chama a função recursivamente com n-1
    }
}

int main() {
    int numero = 3;
    printf("Contagem regressiva de %d até 0: ", numero);
    contagem_regressiva(numero);
    printf("\n"); // Adiciona uma nova linha para melhor formatação
    return 0;
}
