#include <stdio.h>

void contagem_regressiva(int n) {
    if (n >= 0) {
        printf("%d ", n); 
        contagem_regressiva(n - 1); 
    }
}

int main() {
    int numero = 3;
    printf("Contagem regressiva de %d atÃ© 0: ", numero);
    contagem_regressiva(numero);
    printf("\n"); 
    return 0;
}
